
.row
  .col-lg-6.col-lg-offset-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|

      - unless resource.errors.empty?
        - resource.errors.full_messages.each do |error|
          .lead= error

      .row
        .col-lg-12
          = f.label :name
          = f.text_field :name, class: "form-control", autofocus: true

      .row.top10
        .col-lg-12
          = f.label :email
          = f.email_field :email, class: "form-control"

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        .row.top10
          .col-lg-12
            Currently waiting confirmation for: #{resource.unconfirmed_email}

      - if f.object.encrypted_password.present?
        .row.top10
          .col-lg-12
            = f.label :password
            %div
              %i (leave blank if you don't want to change it)
            = f.password_field :password, class: "form-control", autocomplete: "off"

        .row.top10
          .col-lg-12
            = f.label :password_confirmation
            = f.password_field :password_confirmation, class: "form-control", autocomplete: "off"

        .row.top10
          .col-lg-12
            = f.label :current_password
            %div
              %i (we need your current password to confirm your changes)
            = f.password_field :current_password, class: "form-control", autocomplete: "off"

      .row.top10
        .col-lg-12
          = f.submit "Update", class: "btn btn-lg btn-primary"

    .row.top10
      .col-lg-12
        %h3 Cancel my account
        %p
          Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-danger"}



