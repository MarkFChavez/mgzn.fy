.post.techcrunch
  .row
    .col-lg-12
      = link_to post.title, post.link, target: "_blank", class: 'link lead bold'

  .row.top10
    .col-lg-12
      %small= "#{distance_of_time_in_words(Time.now, post.published_at).upcase} AGO"

  .row.top10
    .col-lg-12
      = link_to image_tag(post.image, style:"width:210px;height:160px"), post.link, target: "_blank"
      .top20
        %p{style:"text-align:justify"}= post.excerpt

  .row.top10
    .col-lg-12
      .pull-right
        %span.bold.green= post.source.upcase

